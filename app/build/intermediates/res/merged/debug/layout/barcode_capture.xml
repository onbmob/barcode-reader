<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <com.google.android.gms.samples.vision.barcodereader.ui.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.samples.vision.barcodereader.ui.camera.GraphicOverlay
            android:id="@+id/graphicOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical" />

    </com.google.android.gms.samples.vision.barcodereader.ui.camera.CameraSourcePreview>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stemsc_txt"
        android:textColor="@color/colorMagenta"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvSost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:gravity="center"
        android:text="Выберите лоток"
        android:textColor="#00ff00"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/tvTray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Лоток не выбран"
        android:textColor="#ff0000"
        android:textSize="24dp" />

    <RelativeLayout
        android:id="@+id/lLayout1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/tvTray"
        android:layout_below="@+id/tvSost">

        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#75efe811"
            android:gravity="center"
            android:text="@string/stemsc_txt"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0307fc" />

        <TextView
            android:id="@+id/tvArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBrand"
            android:gravity="center"
            android:text="@string/stemsc_txt"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvArt"
            android:background="#7549ff01"
            android:text="@string/stemsc_txt"
            android:textColor="#0307fc" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCode"
            android:gravity="center"
            android:background="#75efe811"
            android:text="@string/stemsc_txt" />


