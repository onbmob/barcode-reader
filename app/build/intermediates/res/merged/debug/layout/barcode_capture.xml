    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lLayout2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/lLayout1"
        android:layout_toStartOf="@+id/lLayout1">

    <TextView
        android:id="@+id/qNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Необходимое к-во"
        android:textColor="#0000ff"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/qReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/qNeed"
        android:text="Выбрано"
        android:textColor="#0000ff"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/qCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qReal"
        android:text="(положите товар в лоток и сосканируйте штрихкод лотка) "
        android:textColor="#00ffff"
        android:textSize="24dp" />
